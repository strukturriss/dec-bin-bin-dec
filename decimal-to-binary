
function decBin (dec) {
  var targetArr = [];
  var temp;
  
  function recurse (x) {
    for (i=x; i > 0; i--) {
      if (x-(Math.pow(2,i)) >= 0) {
        targetArr.push(Math.pow(2,i));
        temp = x-(Math.pow(2,i));
      } else {
        temp = x;
        recurse(temp);
      }
    }
  }
  
  recurse(dec);
  return targetArr;
}

decBin (128);
