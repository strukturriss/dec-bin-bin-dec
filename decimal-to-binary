
function decBin (dec) {
  var targetArr = [];
  var tempArr = [];
  
  for (i=0; i <= Math.log2(dec); i++) {
    tempArr.push(Math.pow(2,i));
  }
  
  function recursive(x,j) {
    targetArr.push(tempArr[tempArr.length-j]);
    var interim = x-tempArr[tempArr.length-j];
    if (interim > 0) {
      j++;
      recursive(interim,j);
    } else {
      targetArr.push(0);
    }
  }
  
  recursive(dec,1);
  return targetArr;
}

decBin (117);
