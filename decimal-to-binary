
function decBin (dec) {
  var targetArr = [];
  
  function recurse (x) {
    for (i=Math.sqrt(x); i > 0; i--) {
      if (x-Math.pow(2,i) == 0) {
        targetArr.push(x);
      } else {
        targetArr.push(Math.pow(2,i-1));
        x = x-Math.pow(2,i-1);
        recurse(x);
      }
    }
  }
  
  recurse(dec);
  return targetArr;
}

decBin (128);
